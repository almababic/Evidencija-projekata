<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/login.css' />
    <link rel="icon" href="/images/favicon.png" type="image/x-icon">

    <script>
      // Skripta za prikazivanje alerta ako postoji greška
      const errorMessage = '<%= typeof error !== "undefined" ? error : "" %>'; // Dohvaća poruku o grešci iz servera

      if (errorMessage) {
        alert(errorMessage);
      }
    </script>
  </head>
  <body>
    <div class="login-container">
      <div class="menadzer">
        <form class="menadzer-login-form" method="post" action="/login/loginMenadzer">
          <h3>Prijavite se kao menadžer projekta</h3>
          <label for="menadzerUsername">Username:</label>
          <input type="text" id="menadzerUsername" name="username_menadzer" required>
          <br>
          <label for="menadzerLozinka">Lozinka:</label>
          <input type="password" id="menadzerLozinka" name="lozinka_menadzer" required>
          <br>
          <button type="submit">Prijava</button>
        </form>
        <div id="errorMessage"></div>
      </div>
    </div>
  </body>
</html>
