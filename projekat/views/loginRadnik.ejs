<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/login.css' />
    <link rel="icon" href="/images/favicon.png" type="image/x-icon">

    <script>
      // Skripta za prikazivanje alerta ako postoji greška
      const errorMessage = '<%= typeof error !== "undefined" ? error : "" %>'; // Dohvaća poruku o grešci iz servera

      if (errorMessage) {
        alert(errorMessage);
      }
    </script>
  </head>
  <body>
      <div class="radnik">
        <form class="radnik-login-form" method="post" action="/login/loginRadnik">
          <h3>Prijavite se kao radnik na projektu</h3>
          <label for="radnikUsername">Username:</label>
          <input type="text" id="radnikUsername" name="username_radnik" required>
          <br>
          <label for="radnikLozinka">Lozinka:</label>
          <input type="password" id="radnikLozinka" name="lozinka_radnik" required>
          <br>
          <button type="submit">Prijava</button>
        </form>
        <div id="errorMessage"></div>
      </div>
    </div>
  </body>
</html>
